{
  "btn": {
    ".btn-solid": {
      "border-radius": "var(--spacer-2xs)",
      "display": "inline-block",
      "font-family": "var(--font-family-sans)",
      "font-weight": "var(--font-weight-bold)",
      "line-height": "var(--lh-10);",
      "transition": "var(--transition-defaults);",
      ".btn-svg": {
        "display": "inline-flex;",
        "align-items": "center;"
      },
      "&:disabled": {
        "background-color": "var(--color-neutral-200);",
        "color": "var(--color-neutral-500);"
      }
    },
    ".btn--sm": {
      "padding": ".62rem .88rem .56rem;",
      "font-size": ".8125rem;",
      ".btn-svg svg": {
        "width": "var(--spacer-sm);"
      }
    },
    ".btn--md": {
      "padding": ".81rem var(--spacer-base) var(--spacer-sm);",
      "font-size": ".9375rem;",
      ".btn-svg svg": {
        "width": "var(--spacer-base);"
      }
    },
    ".btn--lg": {
      "padding": "var(--spacer-base) 1.25rem;",
      "font-size": "1.125rem;",
      ".btn-svg svg": {
        "width": "var(--spacer-md);"
      }
    },
    ".btn-solid--primary": {
      "background": "var(--color-primary-500);",
      "color": "var(--color-white);",
      "&:hover": {
        "background-color": "var(--color-primary-700);",
        "color": "var(--color-white);"
      },
      "&:focus": {
        "background-color": "var(--color-primary-900);",
        "color": "var(--color-white);"
      },
      ".btn-svg svg path": {
        "fill": "var(--color-neutral-100);"
      }
    },
    ".btn-solid--dk": {
      "background": "var(--color-neutral-900);",
      "color": "var(--color-white);",
      "&:hover": {
        "background-color": "var(--color-neutral-800);"
      },
      "&:focus": {
        "background-color": "var(--color-neutral-800);"
      },
      ".btn-svg svg path": {
        "fill": "var(--color-neutral-100);"
      }
    },
    ".btn-solid--lt": {
      "background": "var(--color-neutral-100);",
      "color": "var(--color-neutral-900);",
      "&:hover": {
        "background-color": "var(--color-neutral-200);",
        "color": "var(--color-neutral-900);"
      },
      "&:focus": {
        "background-color": "var(--color-neutral-300);",
        "color": "var(--color-neutral-900);"
      },
      ".btn-svg svg path": {
        "fill": "var(--color-neutral-900);"
      }
    },
    ".btn-solid--white": {
      "background": "var(--color-white);",
      "color": "var(--color-neutral-900);",
      "&:hover": {
        "background-color": "var(--color-neutral-400);",
        "color": "var(--color-neutral-900);"
      },
      "&:focus": {
        "background-color": "var(--color-neutral-200);",
        "color": "var(--color-neutral-900);"
      },
      ".btn-svg svg path": {
        "fill": "var(--color-neutral-900);"
      }
    },
    ".btn-outline": {
      "background": "transparent",
      "border": "1px solid var(--color-neutral-400);",
      "border-radius": "var(--spacer-2xs)",
      "color": "var(--color-btn-outline)",
      "display": "inline-block",
      "font-family": "var(--font-family-sans)",
      "font-weight": "var(--font-weight-bold)",
      "line-height": "var(--lh-10);",
      "transition": "var(--transition-defaults);",
      "&:hover": {
        "background-color": "var(--color--btn-outline--hover--bg);",
        "color": "var(--color-btn-outline--hover);"
      },
      "&:focus": {
        "background-color": "var(--color--btn-outline--hover--bg);",
        "color": "var(--color-btn-outline--focus);"
      }
    },
    ".btn-underline": {
      "display": "inline-block",
      "font-family": "var(--font-family-sans)",
      "font-weight": "var(--font-weight-bold)",
      "line-height": "var(--lh-10);",
      "transition": "var(--transition-defaults);",
      ".btn-svg": {
        "display": "inline-flex;",
        "align-items": "center;"
      },
      "&:disabled": {
        "background-color": "var(--color-neutral-200);",
        "color": "var(--color-neutral-500);"
      }
    },
    ".btn-underline:hover": {
      "background-color": "var(--color-yellow-500);"
    },
    ".btn-underline:focus": {
      "background-color": "var(--color-yellow-500);"
    }
  }
}
