{
  "btn": {
    ".btn-solid": {
      "background": "var(--color-btn-solid--bg)",
      "border-radius": "var(--spacer-2xs)",
      "color": "var(--color-btn-solid--text)",
      "display": "inline-block",
      "font-family": "var(--font-family-sans)",
      "font-weight": "var(--font-weight-bold)",
      "line-height": "var(--lh-10);",
      "transition": "var(--transition-defaults);",
      ".btn-svg": {
        "display": "inline-flex;",
        "align-items": "center;"
      },
      ".btn-svg svg path": {
        "fill": "var(--color-btn-solid--svg);"
      },
      "&:hover": {
        "background-color": "var(--color-btn-solid--bg--hover)",
        ".btn-svg svg path": {
          "fill": "var(--color-btn-solid--svg--hover)"
        }
      },
      "&:focus": {
        "background-color": "var(--color-btn-solid--bg--focus)",
        ".btn-svg svg path": {
          "fill": "var(--color-btn-solid--svg--focus)"
        }
      },
      "&:disabled": {
        "background-color": "var(--color-neutral-200);",
        "color": "var(--color-neutral-500);"
      }
    },
    ".btn--sm": {
      "padding": ".62rem .88rem .56rem;",
      "font-size": ".8125rem;",
      ".btn-svg svg": {
        "width": "var(--spacer-sm);"
      }
    },
    ".btn--md": {
      "padding": ".81rem var(--spacer-base) var(--spacer-sm);",
      "font-size": ".9375rem;",
      ".btn-svg svg": {
        "width": "var(--spacer-base);"
      }
    },
    ".btn--lg": {
      "padding": "var(--spacer-base) 1.25rem;",
      "font-size": "1.125rem;",
      ".btn-svg svg": {
        "width": "var(--spacer-md);"
      }
    },
    ".btn-outline": {
      "background": "var(--color-btn-outline--bg)",
      "border": "1px solid var(--color-btn-outline--border);",
      "border-radius": "var(--spacer-2xs)",
      "color": "var(--color-btn-outline--text)",
      "display": "inline-block",
      "font-family": "var(--font-family-sans)",
      "font-weight": "var(--font-weight-bold)",
      "line-height": "var(--lh-10);",
      "transition": "var(--transition-defaults);",
      ".btn-svg svg path": {
        "fill": "var(--color-btn-outline--svg)"
      },
      "&:hover": {
        "background-color": "var(--color-btn-outline--bg--hover);",
        "color": "var(--color-btn-outline--text--hover);",
        "border-color": "var(--color-btn-outline--border--hover);",
        ".btn-svg svg path": {
          "fill": "var(--color-btn-outline--svg--hover)"
        }
      },
      "&:focus": {
        "background-color": "var(--color--btn-outline--bg--focus);",
        "color": "var(--color-btn-outline--text--focus);",
        "border-color": "var(--color-btn-outline--border--focus);",
        ".btn-svg svg path": {
          "fill": "var(--color-btn-outline--svg--focus)"
        }
      }
    },
    ".btn-underline": {
      "color": "var(--color-btn-underline--text)",
      "display": "inline-block",
      "text-decoration": "underline",
      "text-decoration-thickness": "2px",
      "text-underline-offset": "2px",
      "font-family": "var(--font-family-sans)",
      "font-weight": "var(--font-weight-bold)",
      "line-height": "var(--lh-10);",
      "transition": "var(--transition-defaults);",
      ".btn-svg": {
        "display": "inline-flex;",
        "align-items": "center;"
      },
      ".btn-svg svg path": {
        "fill": "var(--color-btn-underline--svg)"
      },
      "&:hover": {
        "background-color": "var(--color-btn-underline--bg--hover);",
        "color": "var(--color-btn-underline--text--hover);",
        "border-color": "var(--color-btn-underline--border--hover);",
        ".btn-svg svg path": {
          "fill": "var(--color-btn-underline--svg--hover)"
        }
      },
      "&:focus": {
        "background-color": "var(--color--btn-underline--bg--focus);",
        "color": "var(--color-btn-underline--text--focus);",
        "border-color": "var(--color-btn-underline--border--focus);",
        ".btn-svg svg path": {
          "fill": "var(--color-btn-underline--svg--focus)"
        }
      },
      "&:disabled": {
        "background-color": "var(--color-neutral-200);",
        "color": "var(--color-neutral-500);"
      }
    },
    ".btn-icon": {
      "background-color": "var(--color-btn-icon--bg);",
      "display": "inline-block",
      "transition": "var(--transition-defaults);",
      ".btn-svg": {
        "display": "inline-flex;",
        "align-items": "center;"
      },
      ".btn-svg svg path": {
        "fill": "var(--color-btn-icon--svg)"
      },
      "&:hover": {
        "background-color": "var(--color-btn-icon--bg--hover);",
        "border-color": "var(--color-btn-icon--border--hover);",
        ".btn-svg svg path": {
          "fill": "var(--color-btn-icon--svg--hover)"
        }
      },
      "&:focus": {
        "background-color": "var(--color--btn-icon--bg--focus);",
        "border-color": "var(--color-btn-icon--border--focus);",
        ".btn-svg svg path": {
          "fill": "var(--color-btn-icon--svg--focus)"
        }
      },
      "&:disabled": {
        "background-color": "var(--color-neutral-200);",
        ".btn-svg svg path": {
          "fill": "var(--color-neutral-600)"
        }
      }
    }
  }
}
