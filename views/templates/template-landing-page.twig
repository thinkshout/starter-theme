{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="page-landing landing-page page-{{post.slug}}" id="post-{{post.ID}}">
			<header>
				{% set hero_fields = post.get_field('hero') %}
				{% include 'blocks/banner/banner-example.twig' with {
					banner: hero_fields.banner,
				} %}
			</header>
      <main class="landing-content">
        {% for landing_page_block in post.landing_page_content %}
          {% set fields = landing_page_block.fields %}
          {% include 'blocks/' ~ landing_page_block.block_layout ~ '/' ~ landing_page_block.block_layout ~ '.twig' %}
        {% endfor %}
      </main>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}