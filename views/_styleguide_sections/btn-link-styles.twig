{# Button and Link Styles#}

{% set btnLinkStyles = [
  'btn-outline'
] %}

{% set sizes = [
  'lg',
  'md',
  'sm'
] %}

{% set colors = [
  'primary',
  'dk',
  'lt',
  'white'
] %}

{% set bgColors = [
  'ts-bg-black',
  'ts-bg-neutral-500',
  'ts-bg-white'
] %}

{% set svgs = {
    "before": "download",
    "after": "arrow-right",
    "none": "",
  }
%}

{% set iconBtnLinkStyles = [

] %}

{% set link_url = '/' %}
<span class="hidden bg-black bg-neutral-100 bg-primary bg-neutral-500 bg-white btn--sm btn-solid--primary btn--md
btn--lg
btn-solid--dk btn-solid--lt
btn-solid--white"></span>
<span class="py-xs py-2xs px-sm px-md "></span>
<h2 class="h3">Buttons and links</h2>
<p class="body-lg mt-zero">css/common/_buttons-links.css</p>
<p class="body-lg mt-zero">views/btns</p>
<p class="body-lg gray mt-sm mb-md">Buttons and links with icons are reusable components found in twig
  "views/btns"</p>
<hr class="mt-sm mb-sm">
 Button styles
<p class="utility-xs">All button and links use an included template. <br/>
  <em>See views/btns/[btn name] for templates and docs</em></p>
{# Loops through btn templates#}
{% for color in colors %}
  <div class="my-lg">
    {% for size in sizes %}
      <div class="my-sm">
        {% for key, svg in svgs %}
          <div class="inline-block">
            {% include 'btns/btn-solid.twig' with {
              link: {title: "btn-solid" ~ " " ~ color ~ " " ~ size, url: link_url},
              size: "btn--" ~ size,
              color: "btn-solid--" ~ color,
              svg_position: key,
              link_svg_name: svg
            } %}
          </div>
          <span class="mr-sm">
            {% if key == 'none' %}
              {% include 'btns/btn-solid.twig' with {
                link: {url: link_url},
                size: "btn--" ~ size,
                color: "btn-solid--" ~ color,
                link_svg_name: "arrow-right"
              } %}
            {% endif %}
          </span>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
{% endfor %}

{# Outline buttons #}
{% for btn in btnLinkStyles %}
  {% for bgColor in bgColors %}
    <div class="my-lg">
      {% for size in sizes %}
        <div class="my-sm">
          {% for key, svg in svgs %}
            <div class="inline-block {{ bgColor }} p-md">
              {% include 'btns/' ~ btn ~ '.twig' with {
                link: {title: btn ~ " " ~ color ~ " " ~ size, url: link_url},
                size: "btn--" ~ size,
                color: "btn-outline--" ~ color,
                svg_position: key,
                link_svg_name: svg
              } %}
            </div>
            <span class="mr-sm">
                {% if key == 'none' %}
                  {% include 'btns/' ~ btn ~ '.twig' with {
                    link: {url: link_url},
                    size: "btn--" ~ size,
                    color: "btn-outline--" ~ color,
                    link_svg_name: "arrow-right"
                  } %}
                {% endif %}
              </span>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  {% endfor %}
{% endfor %}
