{# Section title -- Side by side
 *
 * See variables in section-title.twig
#}
{% set margin = margin ?? "mb-base md:mb-lg" %}
{% set max_w = primary_btn or secondary_btn ? "md:max-w-[" ~ description_max_width ~ "]" : "" %}

<div class="component--section-title--side-by-side flex flex-col md:items-center gap-xs {{ margin }} md:flex-row md:justify-between">

  {# Text wrapper #}
  <div class="{{ max_w }}">
    {# Text #}
    {% include "molecules/section-title/display/variants/section-title--text.twig" with {
      eyebrow: eyebrow,
      header: header,
      text: text
    } %}

  </div>

  {% if primary_btn or secondary_btn %}
    {# Button wrapper #}
    <div class="md:block shrink-0">
      <div class="flex flex-col md:flex-row gap-xs md:gap-md">

        {# Buttons #}
        {% include "atoms/btns/btn-two-up.twig" with {
          primary_btn: primary_btn,
          secondary_btn: secondary_btn
        } %}

      </div>
    </div>
  {% endif %}

</div>
