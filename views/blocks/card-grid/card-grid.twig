{#
  Title: Card Grid
  Description: A block that displays a grid of cards with an optional title and description above.
  Category: theme
  Icon: columns
  SupportsAlign: false
  Example: {}
#}

{# Get the Block Posts by the grid_cards property #}
{% set block_card_posts = make_cards_for_grid(fields.grid_cards) %}

{% include 'blocks/card-grid/card-grid.html.twig' with {
  cards: block_card_posts,
  colorway: fields.block_colorway,
  header: fields.title,
  eyebrow: fields.eyebrow,
  text: fields.description,
  primary_btn: fields.primary_cta,
  secondary_btn: fields.secondary_cta
} %}
