{# Template for new menus #}

{% if items %}
	<ul class="{{ menu_wrapper_classes }}">
	{% set menu_wrapper_classes = '' %}
	{% for item in items %}
		<li class="{{ item.classes | join(' ') }}">
			<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
			{% if item.children %}
			{% include "components/nav/menu.twig" with { 'items': item.children } %}
			{% endif %}
		</li>
	{% endfor %}
	</ul>
{% endif %}
