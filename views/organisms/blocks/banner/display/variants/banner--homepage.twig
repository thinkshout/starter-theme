{# Banner -- inset
 *
 * See banner.html.twig for full variables.
#}

{% set aspect_ratio = " aspect-square sm:aspect-[16/9] lg:aspect-[21/9] " %}
{% set image_classes = " lazyloaded object-cover w-full " ~ aspect_ratio %}
{% set image_wrapper_classes = " overflow-hidden " ~ aspect_ratio %}

<span class="hidden md:aspect-[16/9] lg:aspect-[21/9]"></span>

<div class="block--banner--homepage relative ts-lovey ts-bg-brand-1 mb-base md:mb-lg  {{ colorway }}">

    <div class="xl:container p-site ">
        {# Text Wrapper #}
        <div class="pt-6xl pb-base md:pt-7xl ">
            {% include "molecules/section-title/section-title.twig" with {
                style: "left",
                eyebrow: eyebrow,
                header: title,
                text: text,
                primary_btn: primary_btn,
                secondary_btn: secondary_btn,
                header_tag: "h1",
                margin: "mb-0",
                max_width: "md:max-w-[788px]"
            } %}
        </div>  {# Closes Text wrapper #}
    </div>
    <span class="banner-homepage--graphic absolute left-0 overflow-hidden right-0 top-auto w-full">
        {# Desktop graphic #}
        <span class="hidden lg:block">
            {% include "atoms/svg-icon-embed.twig" with {
                svg_name: "gorge-curve-line--desktop",
            }
            %}
        </span>
        {# Mobile graphic #}
        <span class="lg:hidden">
        {% include "atoms/svg-icon-embed.twig" with {
            svg_name: "gorge-curve-line--mobile",
        }
        %}
        </span>
    </span>
    {# Image #}
    <div class="banner--center-image-wrapper {{ image_wrapper_classes }}">
        {% include 'molecules/image/media.twig' with {
            image: image,
            classes: image_classes,
            caption_style: "under",
            bg_figcaption: "",
            figcaption_classes: 'ts-text-low-contrast p-2xs lg:px-0 lg:pb-0 absolute left-md bottom-0'
        } %}
    </div>

</div>
