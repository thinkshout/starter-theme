{# Banner -- centered
 *
 * See banner.html.twig for full variables.
#}

{% set image_classes = "aspect-[4/5] sm:aspect-[16/9] lg:aspect-[21/9] lazyloaded" %}

<span class="hidden md:aspect-[16/9] lg:aspect-[21/9]"></span>

<div class="block--banner--center ts-bg-brand-1 pb-xl lg:pb-5xl relative ts-lovey">

  {# Image #}
  <div class="banner--center-image-wrapper overflow-hidden z-0 {{ image_classes }}">
    {% include 'molecules/image/media.twig' with {
      image: image,
      classes: "object-cover w-full",
      caption_style: "under",
      bg_figcaption: "",
      figcaption_classes: 'ts-text-low-contrast p-2xs lg:px-0 lg:pb-0 absolute left-md bottom-0'
    } %}
  </div>

  <div class="xl:container p-site ">
    {# Text Wrapper #}
    <div class="ts-bg-lt -mt-2xl md:-mt-[150px] mx-auto relative z-5 md:w-[80%] p-base md:p-5xl">
      {% include "molecules/section-title/section-title.twig" with {
        eyebrow: eyebrow,
        header: title,
        text: text,
        primary_btn: primary_btn,
        secondary_btn: secondary_btn,
        secondary_btn: secondary_btn,
        style: "center",
        header_tag: is_hero ? "h1" : "h2",
        margin: ""
      } %}
    </div>  {# Closes Text wrapper #}
  </div>

</div>
