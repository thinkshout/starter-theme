{# Banner -- inset
 *
 * See banner.html.twig for full variables.
#}

{% set aspect_ratio = " aspect-[21/9] " %}
{% set image_classes = " lazyloaded object-cover w-full " ~ aspect_ratio %}
{% set image_wrapper_classes = " overflow-hidden ts-border-radius " ~ aspect_ratio %}
{% set padding = is_hero ? "pt-xl lg:pt-6xl" : "ts-py-block-sm" %}

<div class="block--banner--insetCentered relative ts-lovey {{ padding }}  {{ colorway }}">

    <div class="xl:container p-site ">
        {# Text Wrapper #}
        <div class="pb-base md:pb-2xl">
            {% include "molecules/section-title/section-title.twig" with {
                eyebrow: eyebrow,
                header: title,
                text: text,
                primary_btn: primary_btn,
                secondary_btn: secondary_btn,
                secondary_btn: secondary_btn,
                style: "center",
                header_tag: is_hero ? "h1" : "h2",
                margin: ""
            } %}
        </div>  {# Closes Text wrapper #}
      {# Image #}
      <div class="banner--center-image-wrapper {{ image_wrapper_classes }}">
            {% include 'molecules/image/media.twig' with {
                image: image,
                classes: image_classes,
                caption_style: "under",
                bg_figcaption: "",
                figcaption_classes: 'ts-text-low-contrast p-2xs lg:px-0 lg:pb-0 absolute left-md bottom-0'
            } %}
        </div>
    </div>

</div>
