{# 
  Set in lib/class-theme.php as part of thinktimber_menus class prop in the constuctor.
  Added to timber's context in the add_to_context function.
#}
{% set footer_about_menu = menus.footer_about %}
{% set footer_programs_menu = menus.footer_programs %}
{% set footer_get_involved_menu = menus.footer_get_involved %}
{% set footer_copyright_menu = menus.footer_copyright %}

<footer id="colophon" class="site-footer py-4xl ts-bg-lt">
  <div class="p-site xl:container">
    <div class="footer-content divide-y divide-neutral-300">

      {# Subscribe form #}
      {# @todo Once we add the form variant of the Section Title, that will handle the text and form #}
      <div class="pb-2xl">
        {% include "components/section-title/section-title.twig" with {
          header: "Join our newsletter",
          text: "Weâ€™ll send you a nice letter once per week. No spam.",
          style: "form",
          primary_btn: { title: 'Sign Up', url: '/' },
        }
        %}
      </div>

      {# Footer menus #}
      <div class="footer-content__menu-wrapper py-2xl flex flex-row justify-between">
        <div class="md:ts-grid-col-2">
          <div class="flex flex-row gap-x-xl">
            <nav class="footer-nav-about inline-block mt-0">
              <h3 class="h5 mb-md ts-text-high-contrast">About</h3>
              {% include 'components/footer/menu--footer.twig' with {
                'items': footer_about_menu.get_items
              } %}
            </nav>
            <nav class="footer-nav-programs inline-block mt-0">
              <h3 class="h5 mb-md ts-text-high-contrast">Programs</h3>
              {% include 'components/footer/menu--footer.twig' with {
                'items': footer_programs_menu.get_items
              } %}
            </nav>
            <nav class="footer-nav-get-involved inline-block mt-0">
              <h3 class="h5 mb-md ts-text-high-contrast">Get Involved</h3>
              {% include 'components/footer/menu--footer.twig' with {
                'items': footer_get_involved_menu.get_items
              } %}
            </nav>
          </div>
          <div class="flex flex-row justify-end"></div>
        </div>
      </div>

      {# Copyright #}
      <div class="footer-content__copyright pt-2xl md:flex flex-row gap-xs justify-between">
        <p class="body-sm ts-text-md-contrast mt-0 lg:mb-0 lh:relative">
          &copy; {{ 'now'|date('Y') }} {{ site.name }}. All Rights Reserved.
        </p>
        <nav class="footer-nav-copy mt-md md:mt-0">
          {% include 'components/footer/menu--footer--privacy.twig' with {
            'items': footer_copyright_menu.get_items
          } %}
        </nav>
      </div>
    </div>
    <!-- .footer-content -->
  </div>
  <!-- .container-content -->
</footer>
<!-- #colophon -->
{{ wp_footer }}
