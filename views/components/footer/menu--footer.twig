{# Template for Footer menu #}

{% if items %}
	<ul class="flex flex-col gap-y-xs">
	{% set menu_wrapper_classes = '' %}
	{% for item in items %}
		<li class="{{ item.classes | join(' body-sm ts-text-high-contrast ') }}">
			<a target="{{ item.target }}" class="hocus-underline hocus-action" href="{{ item.link }}">{{ item.title }}</a>
		</li>
	{% endfor %}
	</ul>
{% endif %}
