{# Section title -- left or right alignment
 *
 * Variables:
 * - alignment ("right" or "left"). Left is default
#}

{% set btn_alignment = alignment == "right" ? "end" : "start" %}

<div class="component--section-title--align-{{ alignment}} text-{{ alignment }} flex flex-col gap-sm
mb-base md:mb-sm">

  {# Text wrapper #}
  <div>

    {# Text #}
    {% include "components/section-title/section-title--text.twig" with {
      eyebrow: eyebrow,
      header: header,
      text: text
    } %}

  </div>

  {% if primary_btn or secondary_btn %}
    {# Button wrapper #}
    <div class="md:block shrink-0">
      <div class="flex flex-col md:flex-row gap-md justify-{{ btn_alignment }}">

        {# Button(s) #}
        {% include "btns/btn-two-up.twig" with {
          primary_btn: primary_btn,
          secondary_btn: secondary_btn
        } %}

      </div>
    </div>
  {% endif %}

</div>
