{# Section title -- left aligned
 *
#}

<div class="component--section-title--align-left flex flex-col gap-sm">

  {# Text wrapper #}
  <div class="md:max-w-[{{ description_max_width }}]">
    {# Text #}
    {% include "components/section-title/section-title--text.twig" with {
      eyebrow: eyebrow,
      header: header,
      text: text
    } %}

  </div>

  {% if primary_btn or secondary_btn %}
    {# Button wrapper #}
    <div class="md:block shrink-0">
      <div class="flex flex-col md:flex-row gap-md justify-start">

        {# Button(s) #}
        {% include "btns/btn-two-up.twig" with {
          primary_btn: primary_btn,
          secondary_btn: secondary_btn
        } %}

      </div>
    </div>
  {% endif %}

</div>
