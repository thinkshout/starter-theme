<header id="masthead" class="site-header z-50 relative">
  <div id="site-navigation" class="main-navigation flex flex-row justify-between items-center py-md xl:container">
    <div class="site-branding site-title relative opacity-100 visible">
      <a href="{{ site.home_url }}" rel="home" class="w-full">
        {% if site_logo %}
        <img src="{{ site_logo.src('medium') }}" alt="Site Logo" />
        <span class="screen-reader-text">{{ site.name }}</span>
        {% else %}
        <h1 class="site-title h1">
          {{ site.name }}
        </h1>
        <span class="screen-reader-text site-description">
          {{ site.description }}
        </span>
        {% endif %}
      </a>
    </div>
    <!-- .site-branding -->

    <nav id="nav-main" class="nav-main" role="navigation">
      {% include "components/menu.twig" with { 'items': menus.header_primary_navigation.get_items, menu_wrapper_classes: 'flex flex-row items-center gap-x-lg' } %}
    </nav>

    <button class="menu-toggle btn reset relative block lg:hidden"
      aria-controls="{{ header_menu.slug }}"
      aria-expanded="false">
      <span class="menu-toggle__sandwich-layer bg-black left-0 top-0 block relative"></span>
      <span class="menu-toggle__sandwich-layer bg-black left-0 top-0 block relative"></span>
      <span class="menu-toggle__sandwich-layer bg-black left-0 top-0 block relative"></span>
      <span class="screen-reader-text">
        Toggle {{ header_menu.name }}
      </span>
    </button>
  </div>
  <!-- #site-navigation -->
</header>
