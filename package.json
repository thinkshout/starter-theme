{
  "name": "thinkwp",
  "version": "1.0.0",
  "description": "thinkwp",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "autoprefixer": "^10.3.6",
    "concurrently": "^6.3.0",
    "cssnano": "^5.0.8",
    "dotenv": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "find-config": "^1.0.0",
    "parcel": "^2.0.0",
    "postcss": "^8.3.8",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^4.0.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "prettier-plugin-twig-melody": "^0.4.6",
    "style-dictionary": "^3.0.2",
    "tailwindcss": "^2.2.16"
  },
  "scripts": {
    "build": "concurrently -c \"magenta,blue\" \"npm:theme.bundle.prod\" \"npm:print.bundle\"",
    "format": "concurrently -c \"magenta,blue,green\" \"npm:format.tokens\" \"npm:format.assets\"",
    "format.assets": "eslint assets --fix && prettier --write assets",
    "format.tokens": "style-dictionary build --config style-dictionary.config.json",
    "preinstall": "npx check-node-version --node $(cat .nvmrc)",
    "prettier": "prettier --write sass/**/*.scss js/**/*.js",
    "postinstall": "npm run format.tokens",
    "start": "npm run theme.watch",
    "theme.bundle.dev": "NODE_ENV=development parcel build ./assets/theme.js --dist-dir ./dist --public-url ./dist",
    "theme.bundle.prod": "NODE_ENV=production parcel build ./assets/theme.js --dist-dir ./dist --public-url ./dist",
    "theme.watch": "NODE_ENV=development parcel watch ./assets/theme.js --dist-dir ./dist --public-url ./dist"
  },
  "author": "ThinkShout, Inc",
  "license": "GPL-3.0"
}
